<%- include('../_partials/_header') %>
    <div>
        <div class="profile-title">
            <h1 class="profile-title-name">
                <%= name %>
            </h1>
            <p class="profile-title-total">Total Portefeuilles : <%= total[0].TOTAL %>
            </p>
        </div>
        
        <div class="container" style="margin-top: 100px">

            <% if(repartitions[0]) { %>
                <div class="main section">
                    <h3 class="section-title">Répartition : </h3>
                    <div class="section-container">
                        <% repartitions.forEach(function(rep) { %>
                            <div>
                                <div> <%= rep.account %> : </div>
                                <div><%= rep.rep %></div>
                                 
                            </div>
                        <% }) %>
                    </div>
                </div>
            <% } %> 
            <div class="secondary section">
                <h3 class="section-title">Comptes :</h3>
                <div class="section-table">
                    <table>
                        <tr>
                            <th>Numéro de compte</th>
                            <th>Nom client</th>
                            <th>Date ouverture</th>
                            <th>Solde</th>
                            <th>PMVR</th>
                        </tr>
                        <% accounts.forEach(function(user){ %>
                            <tr>
                                <td>
                                    <%= user.NUMCOMPTE %>
                                </td>
                                <td>
                                        <%= user.NOMCLIENT %>
                                </td>
                                <td>
                                    <%= Intl.DateTimeFormat('fr-FR', { year: 'numeric' , month: 'long' , day: '2-digit'
                                        }).format(user.DATEOUVERTURE) %>
                                </td>
                                <td>
                                    <%= user.SOLDE %>
                                </td>
                                <td>
                                    <%= user.PMVR %>
                                </td>
                            </tr>
                            <% }); %>
                    </table>
                </div>
            </div>
        </div>
    </div>
    

    <%- include('../_partials/_footer') %>